<resources>
    <!-- Base application theme. -->
    <style name="Theme.DisneyPlusCloneKekod" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="EditTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="background">@color/step_text</item>
        <item name="boxStrokeColor">@color/checkbox_color</item>
        <item name="android:textColorHint">@color/information_color</item>
        <item name="hintTextColor">@color/email_text</item>
    </style>
</resources>